#!/usr/bin/env python3

from ok.obj import cfg
from ok.shl import Shell
from ok.trm import wrap
from ok.utl import e, j, os

wd = e("~/.ok")
md = j(os.getcwd(), "mod")

def main():
    cfg.wd = wd
    s = Shell()
    s.scandir(md)
    s.load_mod("cmd,fnd,irc,rss")
    s.load_mod(cfg.mods)
    s.start()
    s.init(cfg.mods)
    s.wait()

wrap(main)
